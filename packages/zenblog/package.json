{
  "name": "zenblog",
  "version": "1.0.0",
  "description": "The typescript client for zenblog",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "public": true,
  "exports": {
    ".": "./dist/index.js",
    "./types": "./src/types.ts"
  },
  "files": [
    "dist",
    "types",
    "src"
  ],
  "scripts": {
    "test": "vitest",
    "build": "tsc",
    "dev": "tsc -w",
    "prepublishOnly": "npm i && npm run test && npm run build",
    "publish:prod": "npm publish --access public",
    "publish:beta": "npm publish --access public --tag beta"
  },
  "keywords": [
    "zenblog"
  ],
  "author": "Jordi Enric",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.17.6",
    "@zenblog/types": "^1.0.0"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "vitest": "^3.0.5"
  }
}
